<% if object.errors.any? %>
    <div id="error_explanation">
        <div class="alert alert-danger">
            入力内容に誤りがあります：<%= object.errors.count %>箇所
        </div>
        <ul>
            <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %> </li>
            <% end %>
        </ul>
    </div>
<% end %>