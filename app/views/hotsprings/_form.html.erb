<div class="hotspring-form">
    <div class="col-md-6 col-md-offset-3">
        <%= form_with(model: @hotspring, local: true) do |f| %>
            <%= render 'shared/error_messages', object: f.object %>
            <%= f.label :name, "温泉名" %>
            <%= f.text_field :name, class: "form-control", placeholder:"道後温泉" %>

            <%= f.label :address, "住所" %>
            <%= f.text_field :address, class: "form-control", placeholder:"愛媛県松山市道後湯之町５−６"  %>

            <%= f.label :quality, "泉質" %>
            <%= f.text_field :quality, class: "form-control", placeholder:"アルカリ性単純泉"  %>

            <%= f.label :ph, "pH" %>
            <%= f.number_field :ph, step: "0.1", class: "form-control", placeholder:"9.1"  %>
            <p>画像</p>
            <span class="images">
                <%= f.file_field :images, multiple: true %>
            </span>

            <%= f.submit  yield(:button_text), class: "btn btn-primary" %>
        <% end %>
    </div>
</div>