<div class="review-content">
    <ol id="review-<%= review.id %>">
    <span class="user"><%= link_to review.user.name, review.user %></span>
    <span class="star">評価：<%= review.star %></span>
    <span class="comment"><%= review.comment %></span>
    <span class="timestamp">
        投稿日時：<%= time_ago_in_words(review.created_at) %>前
    </span>
    <% if current_user?(review.user) %>
        <div class="review_edit">
            <div class="review_form">
                <button class="btn btn-primary" data-toggle="modal" data-target="#post-review">
                    <i class="fas fa-pen"></i>  編集
                </button>
            </div>
            <!-- レビュー投稿モーダル -->
            <% provide(:reviews_button, '更新') %>
            <%= render "reviews/form" %>
            <%= link_to "削除", review, method: :delete,
                    data: { confirm: "本当に削除しますか？" } %>
        </div>
    <% end %>
    </ol>
</div>

